<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/pictureView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/colorPicker"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="true"
        android:background="@android:color/white" />

    <Button
        android:id="@+id/button_next"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:onClick="onNextPicture"
        android:background="@drawable/left_1" />

    <Button
        android:id="@+id/button_prev"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:onClick="onPrevPicture"
        android:background="@drawable/right_1" />

    <Button
        android:id="@+id/button_make_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="150dp"
        android:layout_marginRight="50dp"
        android:onClick="onMakeList"
        android:visibility="invisible"
        android:text="List"/>

    <ScrollView
        android:id="@+id/colorPicker"
        android:layout_height="wrap_content"
        android:layout_width="800dp"
        android:layout_alignParentBottom="true">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:background="@android:color/holo_blue_light">

            <Button
                android:id="@+id/red_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/red_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:onClick="onColorPickerClick"
                android:tag="FF0000"
                />
            <Button
                android:id="@+id/orange_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/orange_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/red_color"
                android:onClick="onColorPickerClick"
                android:tag="FF8000"
                />
            <Button
                android:id="@+id/yellow_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/yellow_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/orange_color"
                android:onClick="onColorPickerClick"
                android:tag="FFFF00"
                />
            <Button
                android:id="@+id/green_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/green_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/yellow_color"
                android:onClick="onColorPickerClick"
                android:tag="00FF00"
                />
            <Button
                android:id="@+id/cian_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/cian_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/green_color"
                android:onClick="onColorPickerClick"
                android:tag="00FFFF"
                />
            <Button
                android:id="@+id/blue_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/blue_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/cian_color"
                android:onClick="onColorPickerClick"
                android:tag="0000FF"
                />
            <Button
                android:id="@+id/violet_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/violet_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/blue_color"
                android:onClick="onColorPickerClick"
                android:tag="8000FF"
                />
            <Button
                android:id="@+id/magenta_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/magenta_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/violet_color"
                android:onClick="onColorPickerClick"
                android:tag="FF00FF"
                />
            <Button
                android:id="@+id/brown_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/brown_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/magenta_color"
                android:onClick="onColorPickerClick"
                android:tag="964B00"
                />
            <Button
                android:id="@+id/white_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/white_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/brown_color"
                android:onClick="onColorPickerClick"
                android:tag="FFFFFF"
                />
            <Button
                android:id="@+id/grey_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/grey_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/white_color"
                android:onClick="onColorPickerClick"
                android:tag="808080"
                />
            <Button
                android:id="@+id/black_color"
                android:layout_height="60dp"
                android:layout_width="60dp"
                android:background="@drawable/black_button"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/grey_color"
                android:onClick="onColorPickerClick"
                android:tag="000000"
                />

        </RelativeLayout>
        </HorizontalScrollView>
    </ScrollView>

</RelativeLayout>